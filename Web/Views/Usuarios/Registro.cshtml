@{
    ViewData["Title"] = "Registrarse";
}

<section class="row justify-content-center align-items-center h-100">
    <div class="col-8 card my-5 px-5 shadow-lg">
        <form class="p-4" action="Usuarios/Registro" method="post">
            <h1 class="my-4 pb-4">Registrarse</h1>

            <div class="row mb-4">
                <div class="col form-group">
                    <label class="form-label fs-5" for="txtNombre">Nombre</label>
                    <input placeholder="Ingrese aquí su nombre" required type="text" name="Nombre" id="txtNombre" class="form-control form-control-lg">
                </div>

                <div class="col form-group">
                    <label class="form-label fs-5" for="txtApellido">Apellido</label>
                    <input placeholder="Ingrese aquí su apellido" required type="text" name="Apellido" id="txtApellido" class="form-control form-control-lg">
                </div>
            </div>

            <div class="form-group mb-4">
                <label class="form-label fs-5" for="txtEmail">Correo electrónico</label>
                <input placeholder="Ingrese aquí su correo" required type="email" name="Email" id="txtEmail" class="form-control form-control-lg" />
            </div>

            <div class="form-group mb-4 mt-4">
                <label class="form-label fs-5" for="txtClave">Contraseña</label>
                <input placeholder="Ingrese aquí su contraseña" required type="password" name="Clave" id="txtClave" class="form-control form-control-lg" />

                @if (ViewBag.Error != null)
                {
                    <div class="alert alert-danger alert-dismissible fade show my-4" role="alert">
                        @ViewBag.Error
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }
            </div>

            <div class="form-group mb-5">
                <input type="submit" class="btn btn-primary btn-lg btn-block" value="Registrarme" />

                <p class="mt-3 mb-0">¿Ya tienes una cuenta?</p>
                <a href="Login" class="link-primary">Iniciar sesión</a>
            </div>
        </form>
    </div>
</section>