@{
    ViewData["Title"] = "Inicio de sesión";
}

<section class="row justify-content-center align-items-center h-100">
    <div class="col-5 card my-5 px-5 shadow-lg">
        <form class="p-4" asp-action="Login" method="post">
            <h1 class="my-4 pb-4">Inicio de sesión</h1>

            <div class="form-group mb-4">
                <label class="form-label fs-5" for="txtEmail">Correo electrónico</label>

                <div class="input-group">
                    <span class="input-group-text">
                        <i class="fa-solid fa-user"></i>
                    </span>

                    <input placeholder="Ingrese aquí su correo" required type="email" name="Email" id="txtEmail" class="form-control form-control-lg" />
                </div>
            </div>

            <div class="form-group mb-5 mt-4">
                <label class="form-label fs-5" for="txtClave">Contraseña</label>

                <div class="input-group">
                    <span class="input-group-text">
                        <i class="fa-solid fa-key"></i>
                    </span>

                    <input placeholder="Ingrese aquí su contraseña" required type="password" name="Clave" id="txtClave" class="form-control form-control-lg" />
                </div>
            </div>

            <div class="form-group mb-5">
                <input type="submit" class="btn btn-primary btn-lg btn-block" value="Iniciar sesión" />

                <p class="mt-3 mb-0">¿Todavía no tienes cuenta?</p>
                <a href="/Registro" class="link-primary">Registrate aquí</a>
            </div>
        </form>
    </div>
</section>