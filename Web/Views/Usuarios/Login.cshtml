@{
    ViewData["Title"] = "Inicio de sesión";
}

<section class="row justify-content-center align-items-center h-100">
    <div class="col-5 card my-5 px-5 shadow-lg">
        <!-- Formulario para capturar el email y la contraseña del usuario que desea iniciar sesión. -->
        <form class="p-4" action="/Usuarios/Login" method="post">
            <h1 class="my-4 pb-4">Inicio de sesión</h1>

            <div class="form-group mb-4">
                <label class="form-label fs-5" for="txtEmail">Correo electrónico</label>

                <div class="input-group">
                    <span class="input-group-text">
                        <i class="fa-solid fa-user"></i>
                    </span>

                    <input placeholder="Ingrese aquí su correo" required type="email" name="Email" id="txtEmail" class="form-control form-control-lg" />
                </div>
            </div>

            <div class="form-group mb-4 mt-4">
                <label class="form-label fs-5" for="txtClave">Contraseña</label>

                <div class="input-group">
                    <span class="input-group-text">
                        <i class="fa-solid fa-key"></i>
                    </span>

                    <input placeholder="Ingrese aquí su contraseña" required type="password" name="Clave" id="txtClave" class="form-control form-control-lg" />
                </div>

                @if (ViewBag.Exito != null)
                {
                    <div class="alert alert-success alert-dismissible fade show my-4" role="alert">
                        @ViewBag.Exito
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }

                @if (ViewBag.Error != null)
                {
                    <div class="alert alert-danger alert-dismissible fade show my-4" role="alert">
                        @ViewBag.Error
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }
            </div>

            <div class="form-group mb-5">
                <input type="submit" class="btn btn-primary btn-lg btn-block" value="Iniciar sesión" />

                <p class="mt-3 mb-0">¿Todavía no tienes cuenta?</p>
                <a href="Registro" class="link-primary">Registrate aquí</a>
                
                <!-- DATOS PARA PROBAR, BORRAR ANTES DE ENTREGA -->
